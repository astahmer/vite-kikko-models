{
    "name": "vite-react-ts",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/astahmer/vite-react-ts.git"
    },
    "author": "Alexandre Stahmer <alexandre.stahmer@gmail.com>",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "serve": "vite preview",
        "format": "prettier --write \"./{src,tests}/**/*\"",
        "lint:ts": "tsc --noEmit",
        "lint": "eslint -c .eslintrc.build.js './src/**/*.{js,jsx,ts,tsx}' --cache",
        "lint:fix": "eslint -c .eslintrc.build.js './src/**/*.{js,jsx,ts,tsx}' --cache --fix",
        "lint:pick": "eslint-nibble -c .eslintrc.build.js './src/**/*.{js,jsx,ts,tsx}' --cache",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "migrations:up": "tsx ./src/offline/generateQueryBuilderClientAndMigrations.ts && eslint ./src/{db-interface.ts,migrations,migrations-kikko} --fix"
    },
    "dependencies": {
        "@emotion/react": "^11.10.4",
        "@kikko-land/absurd-web-backend": "^0.5.0",
        "@kikko-land/query-builder": "^0.2.0",
        "@kikko-land/react": "^0.3.0",
        "@kikko-land/sql.js": "^1.6.8",
        "@mantine/core": "^5.5.5",
        "@mantine/dates": "^5.5.5",
        "@mantine/hooks": "^5.5.5",
        "@mikro-orm/cli": "^5.4.2",
        "@mikro-orm/core": "^5.4.2",
        "@mikro-orm/migrations": "^5.4.2",
        "@mikro-orm/sqlite": "^5.4.2",
        "@tanstack/react-query": "^4.12.0",
        "@types/fs-extra": "^9.0.13",
        "@zag-js/pagination": "^0.0.1",
        "@zag-js/react": "^0.1.18",
        "better-sqlite3": "^7.6.2",
        "dayjs": "^1.11.5",
        "fast-glob": "^3.2.12",
        "fs-extra": "^10.1.0",
        "human-id": "^4.0.0",
        "kysely": "^0.22.0",
        "kysely-codegen": "^0.6.2",
        "mantine-data-grid": "^0.0.20",
        "pastable": "^2.0.13",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-error-boundary": "^3.1.4",
        "ts-pattern": "^4.0.5",
        "zod": "^3.19.1"
    },
    "devDependencies": {
        "@types/prettier": "^2.7.1",
        "@types/react": "^18.0.21",
        "@types/react-dom": "^18.0.6",
        "@types/react-highlight-words": "^0.16.4",
        "@typescript-eslint/eslint-plugin": "^5.40.0",
        "@typescript-eslint/parser": "^5.40.0",
        "@vitejs/plugin-react": "^2.1.0",
        "eslint": "^8.25.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-define-config": "^1.7.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-import-resolver-typescript": "^3.5.1",
        "eslint-nibble": "^8.1.0",
        "eslint-plugin-arca": "^0.16.0",
        "eslint-plugin-diff": "^2.0.1",
        "eslint-plugin-file-progress": "^1.3.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.31.10",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "eslint-plugin-sonarjs": "^0.16.0",
        "eslint-plugin-unicorn": "^44.0.2",
        "eslint-plugin-unused-imports": "^2.0.0",
        "prettier": "^2.7.1",
        "react-highlight-words": "^0.18.0",
        "ts-toolbelt": "^9.6.0",
        "tsx": "^3.10.1",
        "type-fest": "^3.1.0",
        "typescript": "^4.8.4",
        "vite": "^3.1.7",
        "vite-plugin-checker": "^0.5.1",
        "vite-plugin-compress": "^2.1.1",
        "vitest": "^0.24.1"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./src/mikro-orm.config.ts",
            "./dist/mikro-orm.config.js"
        ]
    }
}
