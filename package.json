{
    "name": "vite-react-ts",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/astahmer/vite-react-ts.git"
    },
    "author": "Alexandre Stahmer <alexandre.stahmer@gmail.com>",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "serve": "vite preview",
        "format": "prettier --write \"./{src,tests}/**/*\"",
        "lint:ts": "tsc --noEmit",
        "lint": "eslint -c .eslintrc.build.js './src/**/*.{js,jsx,ts,tsx}' --cache",
        "lint:fix": "eslint -c .eslintrc.build.js './src/**/*.{js,jsx,ts,tsx}' --cache --fix",
        "lint:pick": "eslint-nibble -c .eslintrc.build.js './src/**/*.{js,jsx,ts,tsx}' --cache",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "migrations:up": "tsx ./src/offline/generateQueryBuilderClientAndMigrations.ts && eslint ./src/{db-interface.ts,migrations,migrations-kikko} --fix"
    },
    "dependencies": {
        "@emotion/react": "^11.10.5",
        "@kikko-land/absurd-web-backend": "^0.7.2",
        "@kikko-land/react": "^0.6.4",
        "@kikko-land/sql.js": "^1.6.8",
        "@kikko-land/wa-sqlite-web-backend": "^0.7.2",
        "@mantine/core": "^5.7.2",
        "@mantine/dates": "^5.7.2",
        "@mantine/hooks": "^5.7.2",
        "@mikro-orm/cli": "^5.5.3",
        "@mikro-orm/core": "^5.5.3",
        "@mikro-orm/migrations": "^5.5.3",
        "@mikro-orm/sqlite": "^5.5.3",
        "@tanstack/react-query": "^4.15.0",
        "@types/fs-extra": "^9.0.13",
        "@zag-js/pagination": "^0.1.1",
        "@zag-js/react": "^0.2.1",
        "better-sqlite3": "^7.6.2",
        "dayjs": "^1.11.6",
        "fast-glob": "^3.2.12",
        "fs-extra": "^10.1.0",
        "human-id": "^4.0.0",
        "kysely": "^0.22.0",
        "kysely-codegen": "^0.8.0",
        "mantine-data-grid": "^0.0.21",
        "pastable": "^2.0.13",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-error-boundary": "^3.1.4",
        "ts-pattern": "^4.0.5",
        "wa-sqlite": "github:rhashimoto/wa-sqlite#buildless",
        "zod": "^3.19.1"
    },
    "devDependencies": {
        "@astahmer/eslint-config-react": "^0.1.5",
        "@types/prettier": "^2.7.1",
        "@types/react": "^18.0.25",
        "@types/react-dom": "^18.0.8",
        "@types/react-highlight-words": "^0.16.4",
        "@vitejs/plugin-react": "^2.2.0",
        "eslint": "^8.27.0",
        "eslint-define-config": "^1.12.0",
        "prettier": "^2.7.1",
        "react-highlight-words": "^0.18.0",
        "ts-toolbelt": "^9.6.0",
        "tsx": "^3.12.1",
        "type-fest": "^3.2.0",
        "typescript": "^4.8.4",
        "vite": "^3.2.3",
        "vite-plugin-checker": "^0.5.1",
        "vite-plugin-compress": "^2.1.1",
        "vitest": "^0.25.1"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./src/mikro-orm.config.ts",
            "./dist/mikro-orm.config.js"
        ]
    }
}
